@model GiveCRM.Admin.Web.ViewModels.SignUp.RequiredInfoViewModel

@using (Html.BeginForm("SignUp", "SignUp")) {
    <div>
        <fieldset>
            <legend>Sign Up</legend>

            <div class="clearfix">
                @Html.LabelFor(m => m.UserIdentifier, "Email Address")
                <div class="input">
                    @Html.TextBoxFor(m => m.UserIdentifier)
                    @Html.ValidationMessageFor(m => m.UserIdentifier)
                </div>
            </div>

            <div class="clearfix">
                @Html.LabelFor(m => m.Password)
                <div class="input">
                    @Html.PasswordFor(m => m.Password, new { value = Model != null ? Model.Password : "" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="clearfix">
                @Html.LabelFor(m => m.CharityName, "Charity Name")
                <div class="input">
                    @Html.TextBoxFor(m => m.CharityName)
                    @Html.ValidationMessageFor(m => m.CharityName)
                </div>
            </div>

            <div class="clearfix">
                <div class="input">
                    <span style="float: left">
                    @Html.CheckBoxFor(m => m.TermsAccepted)
                    </span>
                    <span>
                    @Html.LabelFor(m => m.TermsAccepted)
                    </span>
                    @Html.ValidationMessageFor(m => m.TermsAccepted)
                </div>
            </div>

            <div class="clearfix">
                <div class="input">
                    <input type="submit" value="Sign Up" class="btn large primary" />
                </div>
            </div>
        </fieldset>
    </div>
}
<script language="javascript">
    $(document).ready(function () {
        $('.field-validation-error').parent().parent().addClass('error');
    });
</script>
